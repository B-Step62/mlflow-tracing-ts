{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "dist/",
        "build/",
        "node_modules/",
        "*.d.ts"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off"
    }
}